rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public Chat: Allow any authenticated user to read and write
    match /artifacts/{appId}/public/data/chatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Private Archives: Allow only the authenticated user to read/write their own data
    match /artifacts/{appId}/users/{userId}/archives/{archiveId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
